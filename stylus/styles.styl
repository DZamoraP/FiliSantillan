@import 'normalize.styl'
@import 'fonts.styl'
@import 'nib/vendor'

azul_bonito = #4799EA
gris_oscuro = #1D1D19
gris_claro = #333
rosa_bonito = #EC2849
verde_fuerte = #46b45b
azul_claro = #386eec
amarillo_bonito = #FEAC09
rosa_claro = #ff752b
facebook = #3b5998
twitter = #1dcaff
google = #d34836
verde_raro = #3FA0A9

a
	text-decoration none

body
	font-family: 'Varela Round', sans-serif;

header
	background black
	position fixed
	top 0
	width 100%
	z-index 1000

h1
	font-size 2.1em
	margin 0
	color white
	line-height 2.7em
	font-family: 'Cherry Swash', cursive;

	strong
		color azul_bonito
		border-left 2px solid azul_bonito
		padding-left 0.2em

	span
		padding 0.2em
		background amarillo_bonito
		border-radius 10px
		margin-left 0.3em

h2
	font-size 2em
	margin 0

figure
	margin 0

.menu
	right 0.3em
	position absolute
	font-size 2.5em
	color white
	top 0.6em

	&:hover
		color azul_bonito

.center-block
	margin 0 auto

.center-text
	text-align center

.opc
	display none
	ul
		list-style none
		padding 0
		li
			a
				color azul_bonito
				font-size 1.2em
				text-decoration none
				display block
				padding 1em
				border 2px solid transparent
				border-radius 5px
			a:hover
				border 2px solid azul_bonito
				border-radius 5px
				color white
.left
	float left

.right
	float right

.small
	margin-top 5.5em

	.saludo
		font-size 2em
		color gris_oscuro
		display block
		margin-bottom 0.5em
		color white

	.descripcion
		color white

.avatar
	img
		width 10em
		border-radius 50%

.elements_bienvenida
	padding 1em
	background rosa_bonito

.sobre_mi
	padding 1em
	background verde_fuerte
	color gris_oscuro

.icons_mi
	font-size 1.5em

	.text
		font-family: 'Varela Round', sans-serif;

.smalltwo
	.elements_sobre_mi
		display block

.image
	margin-top 1.5em
	display inline-block

	img
		width 10em
		border-radius 50%
		z-index: -1;

.img_desc
	width 10em
	height 10em
	position absolute
	margin 0 auto
	left 0
	right 0
	z-index 2
	border-radius 50%
	background rgba(black,0.7)
	display none
	border 2px solid white

	a
		color white
		font-size 2em
		line-height 5em

		&:nth-child(1)
			margin-right 0.5em

		&:hover
			color rosa_bonito

.smallthree
	padding 1em
	background azul_claro

	.name
		font-size 1.5em
		color gris_oscuro
		display block
		margin-bottom 0.5em

	.descripcion
		a
			color white

		a:hover
			color rosa_bonito

.imagetwo
	margin-top 1.5em
	
	img
		width 12em
		height 12em

	#img
		height 10em

	#img3
		width 15em
		height 8em
		

.smallfour
	padding 1em
	background rosa_claro

	.name
		font-size 1.5em
		color gris_oscuro
		display block
		margin-bottom 0.5em
		text-transform uppercase

	.descripcion
		a
			color white

		a:hover
			color rosa_bonito

.elements_formacion:nth-child(4)
	border-bottom 5px solid azul_bonito
	padding-bottom 1em

.lenguajes_formacion
	.dominio
		display block
		margin-bottom 0.5em
		font-size 1.4em

	.name
		display none

	.descripcion_pronto
		padding 0.5em
		background amarillo_bonito
		border-radius 6px
		border 1px solid black

.lenguaje
	margin-top 1.5em
	
	img
		width 8em

/* JS */
.MainMenu-scrolled
	background rgba(black,0.6)


.contacto
	background amarillo_bonito
	padding 1em

.contacto_icons
	font-size 2.2em
	margin-top 0.5em

	a
		
		color gris_claro
		margin-right 0.3em

	.facebook-down:hover
		color facebook

	.twitter-down:hover
		color twitter

	.googleplus:hover
		color google

	.github:hover
		color black

	.mail:hover
		color azul_claro

.footer
	background verde_raro
	padding 1em
	margin 0

	strong
		display block
		font-size 1.2em
		&:before
			content "-"
			margin-right 0.2em

		&:after
			content "-"
			margin-left 0.2em
	span
		display block

		a
			color white
			&:before
				content "'"
				margin-left 0.3em
			&:after
				content "'"
			&:hover
				color rosa_bonito

	span
	strong
		margin 1em 0

@media screen and (min-width:480px)
	.mediumtwo
		.elements_sobre_mi
			display inline-block

@media screen and (min-width:1000px)
	.header
		.opc
			display block
			float right
			margin-right 1em
			li
				display inline-block
		.menu
			display none

	h1
		float left
		margin-left 1em


