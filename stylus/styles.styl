@import 'normalize.styl'
@import 'fonts.styl'
@import 'nib/vendor'

azul = #1dcaff
azul_fuerte = #1479c9
fondo = #131314
amarillo = #fad542
verde = #44a468
fondo-claro = #353236
gris_oscuro = #2e363f
rosita = #e83f66
naranja = #ec5358

body
	background fondo-claro

header
	display none
	text-transform uppercase
	
figure
	margin 0
	
a
	text-decoration none

body
	font-family 'Roboto' sans-serif

.cover
	background url(../img/cover.png)
	background-repeat no-repeat
	background-position center
	height 500px
	text-align center
	
	.fili
		img
			margin-top 1em
			border-radius 50%
			width 250px
			border 5px solid verde
.quote
	font-size 1.8em
	color verde
	text-shadow 4px 4px 5px black
	
	strong
		font-family 'Roboto' sans-serif
		
.about
	text-align center
	padding 1em
	h1
		font-family 'Lobster Two' cursive
		color verde
		font-size 3em
		
	p
		strong
			&:before
				content '-'
			&:after
				content '-'
.menu-list
	background rgba(black,0.2)
	border none
	position fixed
	font-size 2em
	top 0.5em
	left 0.5em
	color white
	
.art_me
	text-align center
	padding 1em
	background gris_oscuro
	.art
		padding 1em		
		.strong_me
			font-size 1.4em
			color verde
			
		p
			color white
			a
				color azul_fuerte
				&:hover
					text-decoration underline
			

.projects
	background naranja
	padding 1em
	text-align center
	h3
		font-size 2em
		color white
		margin 0.1em
	strong
		color white
		margin-bottom 0.5em
		font-size 1.5em
		
	.icons_projects
		span
			color white
			font-size 2em
			margin-right 0.5em
			
.projects_items
	padding 1em
			
.title_project
	text-align center
	margin-top 1em
	.f_project
		display none
			
	.text_project
		font-size 1.2em
		margin-top 0.5em
		strong
			padding-right 1.2em
			border-right 2px solid black
			
		span
			padding-left 0.4em
			
.presentations
	background azul_fuerte
	text-align center
	padding 1em
	.buttons
		padding 1em
		a
			padding 1.5em
			border 4px solid white
			color white
			display block
			font-size 1.3em
			transition 0.3s
			margin-bottom 0.7em
			&:hover
				background white
				color azul_fuerte
				border 4px solid gris_oscuro
				
.sites_title
	text-align center
	margin 1.5em 0
	font-size 1.2em
	strong
		padding-right 1em
		border-right 2px solid black
	span
		padding-left 0.4em

.sites
	padding 1em
	background rosita
	.content_sites
		background verde
		height 300px
		overflow hidden
		margin-bottom 1em
		border 3px dashed white
		.f_sites
			height 210px
			background gris_oscuro
			overflow hidden
			transition height .3s
			img
				width 100px
				margin 2.5em auto
				display block
				transition margin-top .3s
		.info_sites
			height 90px
			background azul_fuerte
			overflow hidden
			transition height .3s
			
			.title_sites
				text-transform uppercase
				font-size 1.5em
				color white
				margin 0.5em 0 0.3em 0.5em
				
			p
				margin 0 0.5em
				
			a
				float right
				margin-top -2.5em
				padding 0.7em 0.4em
				color white
				background gris_oscuro
				margin-right 0.5em
				border-radius 4px
				
				&:hover
					background white
					color gris_oscuro
					transition .3s
					
.contact
	padding 1em
	background verde
	text-align center
	
	h3
		font-size 2em
		color black
		margin 0.1em
	strong
		color black
		margin-bottom 0.5em
		font-size 1.5em
		
	.icons_projects
		span
			color white
			font-size 2em
			margin-right 0.5em

.hi-icon
	display inline-block
	font-size 0px
	cursor pointer
	margin 15px 30px
	width 90px
	height 90px
	border-radius 50%
	text-align center
	position relative
	z-index 1
	color white
	
.hi-icon:after
	pointer-events none
	position absolute
	width 100%
	height 100%
	border-radius 50%
	content ''
	box-sizing content-box

.hi-icon:before
	speak none
	font-size 48px
	line-height 90px
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	display block
	font-smoothing antialiased

.hi-icon-effect-6 .hi-icon
	box-shadow 0 0 0 4px rgba(255,255,255,1)
	transition background 0.3s, color 0.3s


.hi-icon-effect-6 .hi-icon:hover
	background white
	color verde
	
.share
	padding 1em
	text-align center
	h3
		font-size 1.2em
	
.button
	background #DCE0E0
	position relative
	display block
	height 40px
	overflow hidden
	width 150px
	border-radius 3px
	margin 0 auto
	margin-bottom 1em

	.icon
		display block
		float left
		position relative
		z-index 3
		height 100%
		vertical-align top
		width 38px
		border-radius 3px 0px 0px 3px
		text-align center


		span
			color #fff
			line-height 42px


	.slide
		z-index 2
		display block
		margin 0
		height 100%
		left 38px
		position absolute
		width 112px
		border-radius: 0px 3px 3px 0px
		transition: all 0.2s ease-in-out;


		p
			font-weight 400
			border-left 1px solid #fff
			border-left 1px solid rgba(255,255,255,0.35)
			color #fff
			font-size 16px
			left 0
			margin 0
			position absolute
			text-align center
			top 10px
			width 100%

	iframe 
		display block
		position absolute
		right 16px
		top 10px
		z-index 1


.twitter iframe
	width 90px !important
	right 5px
	top 10px
	z-index 1
	display block
	position absolute

.facebook:hover .slide
	left 150px

.twitter:hover .slide
	left 150px
	
.github:hover .slide
	left 150px

.facebook .icon, .facebook .slide
	background #305c99

.twitter .icon, .twitter .slide
	background azul
	
.github .icon, .github .slide
	background gris_oscuro


@media screen and (min-width: 767px)
	.wrap
		overflow hidden
		padding 1em
		
	.padding-top
		padding-top 6em
		
		.fili
			float left
			
	.quote
		font-size 2.8em
		
	.about
		h1
			font-size 4em
			
		p
			text-align left
	.art
		width 48%
		display inline-block
		vertical-align top
		&:nth-child(odd)
			margin-right 2%
			
	.projects
		text-align right
		h3
			font-size 3em
		
		strong
			font-size 2em
			
		.icons_projects
			span
				font-size 2.3em
				
	.title_project
		margin 0 auto
		text-align start
		width 318px
		position relative
		.f_project
			display inline-block
			margin-right 0.5em
			img
				width 60px
							
		.text_project
			display inline-block
			position absolute
			top 0.6em
			font-size 1.5em
			margin-top 0
			
			strong
				padding-right 0.5em
			span
				padding-left 0
				
	.presentations
		.buttons
			a
				width 48%
				display inline-block
				&:nth-child(odd)
					margin-right 2%
					
	.sites_title
		font-size 1.5em
		strong
			padding-right 0.5em

		span
			padding-left 0
					
	.sites
		.content_sites
			width 45%
			display inline-block
			&:nth-child(odd)
				margin-right 9%
				
	.contact
		text-align left
		h3
			font-size 3em
		
		strong
			font-size 2em
			
	.button
		float left
		&:nth-child(-n+3)
			margin-right 1em
						
	.content_share
		h3
			float left
			font-size 1.2em
			margin 0.5em 0 1em 0
		.buttons
			float right

@media screen and (min-width: 1080px)
	header
		display block
		background fondo
		border-bottom 2px solid white
		
	.wrap
		max-width 1080px
		margin 0 auto
		
	.padding-top
		padding-top 5em
		
	.quote
		font-size 3.5em
		
	.menu
		text-align center
		
	.list
		list-style none
		margin 0
		.item
			display inline-block
			padding 1em
			
			a
				color azul
				font-size 1.5em
				
				&:hover
					color verde
	.img_header
		img
			width 60px
			
	.menu-list
		display none
				

	.about
		h1
			font-size 5em
			
		p
			font-size 1.3em
			
	.art
		width 31.333333333%
		vertical-align top
		margin-right 0 !important
			
			
	.projects
		h3
			font-size 4em
			
		strong
			font-size 3em
			
		p
			font-size 1.3em
			
		.icons_projects
			span
				font-size 2.5em
				
	.presentations
		.buttons
			a
				font-size 1.5em
				
	.sites
		.content_sites
			.f_sites
				height 300px
				img
					margin-top 4.7em
			.info_sites
				height 0
				
			&:hover .f_sites
				height 210px
				
			&:hover .info_sites
				height 90px
				
			&:hover .img_sites
				margin-top 2.5em
	
	.contact
		h3
			font-size 4em
			
		strong
			font-size 3em
			
		p
			font-size 1.3em
			
	.hi-icon-effect-6 .hi-icon:hover:before
		animation: spinAround 1.3s linear infinite


	@keyframes spinAround
		from
			transform rotate(0deg)
		to
			transform rotate(360deg)
			
	.content_share
		h3
			font-size 2em
			margin 0



		
				


