@import 'normalize.styl'
@import 'fonts.styl'

azul = #1dcaff
azul_fuerte = #1479c9
fondo = #131314
amarillo = #fad542
verde = #44a468
fondo-claro = #353236
gris_oscuro = #2e363f

body
	background fondo-claro

header
	display none
	text-transform uppercase
	
figure
	margin 0
	
a
	text-decoration none

body
	font-family 'Roboto' sans-serif

.cover
	background url(../img/cover.png)
	background-repeat no-repeat
	background-position center
	height 500px
	text-align center
	
	.fili
		img
			margin-top 1em
			border-radius 50%
			width 250px
			border 5px solid verde
.quote
	font-size 1.8em
	color verde
	text-shadow 4px 4px 5px black
	
	strong
		font-family 'Roboto' sans-serif
		
.about
	text-align center
	padding 1em
	h1
		font-family 'Lobster Two' cursive
		color verde
		font-size 3em
		
	p
		strong
			&:before
				content '-'
			&:after
				content '-'
.menu-list
	background rgba(black,0.2)
	border none
	position fixed
	font-size 2em
	top 0.5em
	left 0.5em
	color white
	
.art_me
	text-align center
	padding 1em
	background gris_oscuro
	.art
		padding 1em		
		strong
			font-size 1.4em
			color verde
			
		p
			color white
			

.projects
	background #f0675c
	padding 1em
	text-align center
	h3
		font-size 2em
		color white
		margin 0.1em
	strong
		color white
		margin-bottom 0.5em
		font-size 1.5em
		
	.icons_projects
		span
			color white
			font-size 2em
			margin-right 0.5em
			
.projects_items
	padding 1em
			
.title_project
	text-align center
	margin-top 1em
	.f_project
		display none
			
	.text_project
		font-size 1.2em
		margin-top 0.5em
		strong
			padding-right 1.2em
			border-right 2px solid black
			
		span
			padding-left 0.4em
			
.presentations
	background azul_fuerte
	text-align center
	padding 1em
	.buttons
		padding 1em
		a
			padding 1.5em
			border 4px solid white
			color white
			display block
			font-size 1.3em
			transition 0.3s
			margin-bottom 0.7em
			
			&:hover
				background white
				color azul_fuerte
				border 4px solid gris_oscuro

		
@media screen and (min-width: 767px)
	.wrap
		overflow hidden
		padding 1em
		
	.padding-top
		padding-top 6em
		
		.fili
			float left
			
	.quote
		font-size 2.8em
		
	.about
		h1
			font-size 4em
			
		p
			text-align left
	.art
		width 48%
		display inline-block
		vertical-align top
		&:nth-child(odd)
			margin-right 2%
			
	.projects
		text-align right
		h3
			font-size 3em
		
		strong
			font-size 2em
			
		.icons_projects
			span
				font-size 2.3em
				
	.title_project
		margin 0 auto
		text-align start
		width 398px
		position relative
		.f_project
			display inline-block
			margin-right 0.5em
			img
				width 60px
							
		.text_project
			display inline-block
			position absolute
			top 0.6em
			font-size 1.5em
			margin-top 0
			
			strong
				padding-right 0.5em
			span
				padding-left 0
				
	.presentations
		.buttons
			a
				width 48%
				display inline-block
				&:nth-child(odd)
					margin-right 2%
										
@media screen and (min-width: 1080px)
	header
		display block
		background fondo
		border-bottom 2px solid white
		
	.wrap
		max-width 1080px
		margin 0 auto
		
	.padding-top
		padding-top 5em
		
	.quote
		font-size 3.5em
		
	.menu
		text-align center
		
	.list
		list-style none
		margin 0
		.item
			display inline-block
			
			a
				padding 0.5em
				color azul
				font-size 1.5em
				
				&:hover
					color verde
	.img_header
		img
			width 60px
			
	.menu-list
		display none
				

	.about
		h1
			font-size 5em
			
		p
			font-size 1.3em
			
	.art
		width 31.333333333%
		vertical-align top
		margin-right 0 !important
			
			
	.projects
		h3
			font-size 4em
			
		strong
			font-size 3em
			
		p
			font-size 1.3em
			
		.icons_projects
			span
				font-size 2.5em
				
	.presentations
		.buttons
			a
				font-size 1.5em

		
				


