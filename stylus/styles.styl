@import 'normalize.styl'
@import 'fonts.styl'

azul = #1dcaff
fondo = #131314
amarillo = #fad542

header
	display none
	
figure
	margin 0

.cover
	background url(../img/cover.png)
	background-repeat no-repeat
	background-position center
	height 500px
	text-align center
	
	.fili
		img
			margin-top 1em
			border-radius 50%
			width 250px
			border 5px solid #5c7dac
.quote
	font-size 1.5em
	strong
		font-family 'Roboto' sans-serif
		
.about
	h1
		font-family: 'Lobster Two', cursive;
		text-align center
		font-size 3em
		
@media screen and (min-width: 767px)
	.wrap
		overflow hidden
		padding 1em
		
		.fili
			float left
			
	.quote
		font-size 2.8em
			
@media screen and (min-width: 1080px)
	header
		display block
		font-family 'Roboto' sans-serif
		
	.wrap
		max-width 1080px
		margin 0 auto
		padding-top 4em
		
	.quote
		font-size 3.5em
		
	.menu
		text-align center
		
	.list
		list-style none
		margin 0
		.item
			display inline-block
			
			a
				padding 0.5em
				font-size 1.5em
				
	.img_header
		img
			width 60px
				
				


